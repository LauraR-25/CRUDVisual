<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.crudvisual.controller.ConnectionController"
      spacing="10"
      alignment="CENTER"
      style="-fx-padding: 20;">

    <Label text="Conectar a Base de Datos"
           style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <Label text="URL de conexión:"/>
    <TextField fx:id="urlField"
               promptText="jdbc:mysql://localhost:3306/notas"/>

    <Label text="Usuario:"/>
    <TextField fx:id="userField"/>

    <Label text="Contraseña:"/>
    <PasswordField fx:id="passwordField"/>

    <Label text="Nombre de la tabla:"/>
    <TextField fx:id="tableField"
               promptText="ej: materias"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Conectar"
                onAction="#handleConnect"
                style="-fx-font-size: 14; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>

        <Button text="Cancelar"
                onAction="#handleCancel"
                style="-fx-font-size: 14; -fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>

</VBox>